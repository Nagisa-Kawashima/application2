<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user, following_users: @following_users, follower_users: @follower_users %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @hoge %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@user) do %>
            <%= image_tag @user.get_profile_image, size:"100x100" %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.favorited_by?(current_user) %>
            <p>
              <%= link_to book_favorites_path(@book),method: :delete do %>
              <i class="fas fa-heart" style="color: red;"></i><%= @book.favorites.count %>
            　<% end %>
            </p>
            <% else %>
            <p>
              <%= link_to book_favorites_path(@book),method: :post do %>
              <i class="far fa-heart" style="color: blue;"></i><%= @book.favorites.count %>
              <% end %>
            </p>
            <% end %>
          </td>
          <td>コメント件数：<%= @book.post_comments.count %></td>
          <td>
          <% if @user == current_user %>
            <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
          <% end %>
          </td>
          <td>
          <% if @user == current_user %>
            <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
          <% end %>
          </td>
        </tr>
      </table>
        <div>
          <% @book.post_comments.each do |post_comment| %>
          <div>
          <%= link_to user_path(post_comment.user_id) do %>
            <%= image_tag post_comment.user.get_profile_image, size:"100x100" %>
            <% end %>
            <%= post_comment.comment %>
            <% if post_comment.user == current_user %>
              <% link_to "削除", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-sm btn-danger pull-right"%>
            <% end %>
          </div>
          <%= link_to user_path(post_comment.user_id) do %>
            <%= post_comment.user.name %>
            <% end %>
          <% end %>
        </div>
        <div>
          <%= form_with model: [@book, @post_comments], url: book_post_comments_path(@book), method: :post do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, class: "form-control" %>
          </div>
          <div>
            <%= f.submit "送信" %>
          </div>
          <% end %>
        </div>
    </div>
  </div>
</div>