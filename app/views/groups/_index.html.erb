<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>introduction</th>
      <th>member</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_image, size:'50x50' %></td>
        <td>
        <%= link_to group_path(group.id) do %>
          <%= group.name %>
        <% end %>
        </td>
        <td><%= group.introduction %></td>
        <td><%= group.group_users.count %></td>
        <td><%= link_to 'show', group_path(group.id) %></td>
        <!--<td>if分もtd中にすべてしまう,実行されないから必ず親要素で囲む-->
        <% if group.is_owned_by?(current_user)%>
        <td>
          <%= link_to 'Edit', edit_group_path(group.id) %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>